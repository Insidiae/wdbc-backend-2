<%- include("../partials/head") %>
<%- include("../partials/navbar") %>

    <h1 class="display-3 mb-5">Editing <%= product.name %> </h1>
    
    <form action="/products/<%= product.id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Product Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= product.name %>">
      </div>

      <label for="price" class="form-label">Price</label>
      <div class="input-group mb-3">
        <span class="input-group-text">$</span>
        <input type="number" class="form-control" id="price" name="price" step="0.01" value="<%= product.price %>">
      </div>

      <label for="category" class="form-label">Category</label>
      <select id="category" name="category" class="form-select mb-3" aria-label="Product Category">
        <% for (let category of categories) { %>
          <option value="<%= category %>" <%= product.category === category ? "selected" : "" %>><%= category[0].toUpperCase() + category.slice(1) %></option>
        <% } %>
      </select>

      <button type="submit" class="btn btn-success">Submit</button>
      <a class="btn btn-danger" href="/products/<%= product.id %>" role="button">Cancel</a>
    </form>

<%- include("../partials/footer") %>
